###
# Get a specific restaurant by ID
GET http://localhost:4000/restaurants/{{restaurant_id}}
Content-Type: application/json
Authorization: Bearer {{auth_token}}

###
# Get all restaurants for a specific user
GET http://localhost:4000/restaurants/organization/1
Content-Type: application/json
Authorization: Bearer {{auth_token}}

###
# Update a restaurant
PUT http://localhost:4000/restaurants/{{restaurant_id}}
Content-Type: application/json
Authorization: Bearer {{auth_token}}

{
  "organization_id": 1,
  "name": "Updated Italian Restaurant 2",
  "address": "456 Main St, City, Country 2",
  "phone": "+1234567830",
  "website": "https://example-updated.com",
  "description": "Updated authentic Italian cuisine",
  "image_url": "https://example.com/updated-image.jpg"
}

###
# Delete a restaurant
DELETE http://localhost:4000/restaurants/{{restaurant_id}}
Content-Type: application/json
Authorization: Bearer {{auth_token}}
